<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="160dp"
    android:layout_height="150dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_marginEnd="20dp"
    app:cardPreventCornerOverlap="false"
    android:id="@+id/cardSpecialization"
    android:layout_marginBottom="24dp"
    >

    <!-- LinearLayout chứa các thành phần -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Icon đại diện cho chuyên khoa -->
        <ImageView
            android:id="@+id/imgSpecializationIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_heart"
            android:scaleType="centerCrop"
            android:contentDescription="@null"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            />

            <!-- Tên chuyên khoa -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyên Khoa"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"
                android:layout_gravity="center_horizontal"
                />
        <TextView
            android:id="@+id/txtSpecializationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chuyên Khoa"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"
            />


            <!-- Số lượng bác sĩ -->
            <TextView
                android:id="@+id/txtDoctorCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 Bác Sĩ"
                android:textSize="12dp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="center_horizontal"
                />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
